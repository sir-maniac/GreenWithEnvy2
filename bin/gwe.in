import os
import sys
import gettext

sys.path.insert(1, '@PYTHON_DIR@')

PKGDATA_DIR = '@PKGDATA_DIR@'
ICON_PATH = '@ICON_PATH@'

# run from meson target without install
source_dir = os.environ.get('MESON_SOURCE_ROOT')
if source_dir is not None:
    sys.path.insert(1, source_dir)
    sys.dont_write_bytecode = True

if __name__ == '__main__':
    from gwe import __main__

    # safe to pass the dirname of PKGDATA_DIR because meson configuration
    #  doesn't change the relationship of the paths

    __main__.main(pkgdata_dir=PKGDATA_DIR,
                  data_dir=os.path.dirname(PKGDATA_DIR),
                  icon_path=ICON_PATH)